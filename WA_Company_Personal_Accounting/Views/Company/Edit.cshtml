@model Company 

<div>

    <h2>Редактировать запись</h2>

    <div>
        <form asp-controller="Company" asp-action="Edit" method="post" enctype="multipart/form-data">


            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="div-box">
                <label asp-for="INN"></label>
                <input asp-for="INN" />
                <span asp-validation-for="INN"></span>
            </div>

            <div class="div-box">
                <label asp-for="JuridicalAddress"></label>
                <input asp-for="JuridicalAddress" />
                <span asp-validation-for="JuridicalAddress"></span>
            </div>

            <div class="div-box">
                <label asp-for="ActualAddress"></label>
                <input asp-for="ActualAddress" />
                <span asp-validation-for="ActualAddress"></span>
            </div>

            <input type="submit" value="Сохранить" />

        </form>

    </div>

</div>
