@model Employee

<div>

    <h2>Редактировать запись</h2>

    <div>
        <form asp-controller="Employee" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="div-box">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" />
                <span asp-validation-for="Surname"></span>
            </div>

            <div class="div-box">
                <label asp-for="Patronymic"></label>
                <input asp-for="Patronymic" />
                <span asp-validation-for="Patronymic"></span>
            </div>

            <div class="div-box">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" />
                <span asp-validation-for="DateOfBirth"></span>
            </div>

            <div class="div-box">
                <label asp-for="PasportSeries"></label>
                <input asp-for="PasportSeries" />
                <span asp-validation-for="PasportSeries"></span>
            </div>

            <div class="div-box">
                <label asp-for="PasportNumber"></label>
                <input asp-for="PasportNumber" />
                <span asp-validation-for="PasportNumber"></span>
            </div>

            <input type="submit" value="Сохранить" />

        </form>



    </div>

</div>

